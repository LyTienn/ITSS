<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<VBox fx:id="mediaItem"
      spacing="10"
      alignment="CENTER"
      prefWidth="150"
      prefHeight="220"
      style="-fx-padding: 15; 
             -fx-background-color: #ffffff;
             -fx-border-color: #dddddd;
             -fx-border-radius: 10;
             -fx-background-radius: 10;
             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="components.mediaItem.MediaItemController">

    <ImageView fx:id="mediaImage" fitHeight="100" fitWidth="100" />
    <Label fx:id="mediaTitle" style="-fx-font-weight: bold; -fx-font-size: 14px;" wrapText="true" textAlignment="CENTER"/>
    <Label fx:id="mediaPrice" style="-fx-text-fill: #888888;" />
    <Button fx:id="viewDetailButton" onAction="#handleViewDetail" text="Xem chi tiết" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    <Button fx:id="addButton" onAction="#handleAddToCart" text="Thêm vào giỏ hàng" />
    <HBox alignment="CENTER" spacing="10">
        <Button text="-" prefWidth="30" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Label text="0"/>
    	<Button text="+" prefWidth="30" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>
</VBox>
