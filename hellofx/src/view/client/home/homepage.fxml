<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane prefHeight="720.0" prefWidth="1280.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.client.HomeController"
            style="-fx-background-color: #f5f5f5;">

     <!-- HEADER -->
    <top>
        <fx:include source="../../../components/header/Header.fxml"/>
    </top>
    
    <!-- LEFT: Sidebar with category -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #ffffff;" alignment="TOP_CENTER">
            <padding><Insets top="20" left="10" right="10" bottom="10"/></padding>
            <Label text="Danh mục" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Button text="Book" prefWidth="100" style="-fx-background-color: #fdd; -fx-text-fill: black;"/>
            <Button text="CD" prefWidth="100" style="-fx-background-color: #fdd; -fx-text-fill: black;"/>
            <Button text="DVD" prefWidth="100" style="-fx-background-color: #fdd; -fx-text-fill: black;"/>
            <Separator/>
            <Label text="Sắp xếp theo" style="-fx-font-size: 14px;"/>
            <Button text="Giá tăng dần" prefWidth="100" style="-fx-background-color: #fdd; -fx-text-fill: black;"/>
            <Button text="Giá giảm dần" prefWidth="100" style="-fx-background-color: #fdd; -fx-text-fill: black;"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <GridPane fx:id="productGrid" hgap="30" vgap="30" alignment="TOP_CENTER" prefWidth="1120" maxWidth="1120">     
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </GridPane>
        </ScrollPane>
    </center>

</BorderPane>
