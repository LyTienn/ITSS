        <Button text="Search"/>
    </HBox>

    <Region HBox.hgrow="ALWAYS"/>

    <VBox alignment="CENTER_RIGHT" spacing="2">
        <Label fx:id="cartCountLabel" text="0 media" style="-fx-font-size: 12px;"/>
