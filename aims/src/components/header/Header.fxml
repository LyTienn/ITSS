        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>

    <Label text="AIMS" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #d62828;"/>

    <HBox spacing="5" alignment="CENTER">
